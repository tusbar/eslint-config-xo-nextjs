{
  "name": "eslint-config-xo-nextjs",
  "version": "1.6.0",
  "description": "ESLint shareable config for Next.js to be used with eslint-config-xo",
  "main": "index.js",
  "repository": "git@github.com:tusbar/eslint-config-xo-nextjs.git",
  "author": "Bertrand Marron",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "jest"
  },
  "files": [
    "index.js",
    "space.js"
  ],
  "keywords": [
    "❤️",
    "react",
    "jsx",
    "eslintconfig",
    "xo",
    "xoxo",
    "hugs",
    "kisses",
    "happy",
    "happiness",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple",
    "zeit",
    "nextjs"
  ],
  "peerDependencies": {
    "babel-eslint": ">=10",
    "eslint": ">=6",
    "eslint-plugin-react": ">=7.14.2",
    "eslint-plugin-react-hooks": ">=1.6.1"
  },
  "dependencies": {
    "eslint-config-xo-react": "^0.23.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.14.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.2.2",
    "jest-junit": "^11.1.0",
    "react": "latest",
    "xo": "^0.28.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports/tests"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "space.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ],
    "rules": {
      "unicorn/string-content": "off"
    }
  }
}
