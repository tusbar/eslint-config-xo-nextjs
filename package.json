{
  "name": "eslint-config-xo-nextjs",
  "version": "2.0.1",
  "description": "ESLint shareable config for Next.js to be used with eslint-config-xo",
  "main": "index.js",
  "repository": "git@github.com:tusbar/eslint-config-xo-nextjs.git",
  "author": "Bertrand Marron",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "jest"
  },
  "files": [
    "index.js",
    "space.js"
  ],
  "keywords": [
    "react",
    "jsx",
    "eslintconfig",
    "xo",
    "xoxo",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple",
    "zeit",
    "nextjs"
  ],
  "peerDependencies": {
    "eslint": ">=7"
  },
  "dependencies": {
    "eslint-config-xo-react": "^0.24.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.0.8"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.2.2",
    "jest-junit": "^12.0.0",
    "react": "^17.0.1",
    "xo": "^0.38.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/__helpers__/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports/tests"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "space.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  }
}
